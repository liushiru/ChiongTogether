<!-- Header -->
<div class="type-header">
  <div class="container">
    <div class="row">
<!------------------------------------------------------------------------------------------------------------------->
      <div class="col-lg-12">
        <div class="type-message">
  
          <h1>Forum</h1>
          <div class="row">
            <div class="col-lg-4"></div>
            <h3 class="col-lg-4">
              <form action="/forum/search" method="GET" class="form-inline">
                  <div class="form-group">
                      <input type="text" name="search" placeholder="search for Jios..." class="form-control">
                      <input type="submit" value="Search" class="search-btn">
                  </div>
              </form>
            </h3>
            <div class="col-lg-4"></div>
          </div>
                    
        </div>   
      </div>
  <!--------------------------------------------------------->
      <div class="forum-content-section-a">
        <div class="container">
          <div class="row">

            <div class="col-md-12">

              <% if (posts.length === 0) {%>
                <div class="col-lg-12">
                  <div class="type-message">

                    <h3>Sorry there is no matching content.</h3>
                    <h3><a href ='/forum/startJio'>Click here to start you own jio!</a></h3>  
                  </div>   
                </div>

              <% } else {%>

                <div class="row" id="forum-title">
                  <div class="col-lg-6">Title</div>
                  <div class="col-lg-4"></div>
                  <div class="col-lg-2">Reply</div>
                </div>

                <% for(var i=0; i<posts.length; i++) { %> 
                  <a href="/forum/<%= posts[i].id %>"> 
                    <div class="row forum-li">
                        <div class="col-lg-6"><%= posts[i].title %></div>
                        <div class="col-lg-4"><%= posts[i].author.name %></div>
                        <div class="col-lg-2"><%= posts[i].comment.length %></div>
                    </div>
                  </a>
                <% } %>

              <% } %>
            </div>
            
          </div>
        </div>
      </div>
  
          
    </div>
  </div>
</div>